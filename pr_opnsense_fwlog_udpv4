rule "pr_opnsense_fwlog_udpv4"
when
    has_field("message") &&
    has_field("application_name") &&
    to_string($message.application_name) == "filterlog" &&
    regex("^.*,(in|out),4,.*,(?i)udp,.*$", to_string($message.message)).matches == true
then
    let csv_string = to_string($message.message);
    let csv_header = "rule_number,sub_rule_number,anchor,uuid,src_intf,reason,action,direction,ip-version,tos,ecn,ttl,id,offset,flags,protocol-id,protocol,length,src_ip,dst_ip,src_port,dst_port,opnsense-rid";
    let parsed_map = csv_to_map(csv_string, csv_header, ",");
    set_fields(parsed_map);
end
